            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/sunsetTx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/sunsetTime"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/locationTx"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="#673AB7"
                android:gravity="center"
                android:letterSpacing="1.2"
                android:paddingStart="30sp"
                android:paddingEnd="30sp"
                android:text="@string/cityName"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.1"
                android:background="#8DCCCCCC"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/time1Tx"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:gravity="center_horizontal"
                    android:text="@string/whatTime"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/time2Tx"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:gravity="center_horizontal"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/time3Tx"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:gravity="center_horizontal"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/time4Tx"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:gravity="center_horizontal"
                    android:textStyle="italic" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.6"
                android:background="#AB85CFEC">

                <TextView
                    android:id="@+id/focsTx1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:text="@string/fickle"
                    app:layout_constraintEnd_toStartOf="@+id/focsTx2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/focsTx2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    app:layout_constraintEnd_toStartOf="@+id/focsTx3"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/focsTx1" />

                <TextView
                    android:id="@+id/focsTx3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    app:layout_constraintEnd_toStartOf="@+id/focsTx4"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/focsTx2" />

                <TextView
                    android:id="@+id/focsTx4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/focsTx3" />

                <ImageView
                    android:id="@+id/focsImage1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    app:layout_constraintEnd_toStartOf="@+id/focsImage2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/focsImage2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    app:layout_constraintEnd_toStartOf="@+id/focsImage3"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/focsImage1"
                    app:layout_constraintTop_toTopOf="@+id/focsTx2" />

                <ImageView
                    android:id="@+id/focsImage3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    app:layout_constraintEnd_toStartOf="@+id/focsImage4"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/focsImage2" />

                <ImageView
                    android:id="@+id/focsImage4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/focsImage3" />


                <TextView
                    android:id="@+id/temperTx1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:gravity="center_horizontal"
                    android:text="@string/celsius"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/temperTx2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/temperTx2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:gravity="center_horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/temperTx3"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/temperTx1" />

                <TextView
                    android:id="@+id/temperTx3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:gravity="center_horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/temperTx4"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/temperTx2" />

                <TextView
                    android:id="@+id/temperTx4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:gravity="center_horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/temperTx3" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="280dp"
                android:layout_height="0dp"
                android:layout_gravity="right"
                android:layout_weight="5"
                android:background="#B721A8B8">

                <ImageButton
                    android:id="@+id/iBtHotel"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:onClick="serchButton"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toStartOf="@+id/iBtcamp"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/hotel" />

                <ImageButton
                    android:id="@+id/iBtcamp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:onClick="serchButton"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toStartOf="@+id/iBtSpa"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/iBtHotel"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/camp" />

                <ImageButton
                    android:id="@+id/iBtSpa"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:onClick="serchButton"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toStartOf="@+id/imageBtClear"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/iBtcamp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/spa" />

                <ImageButton
                    android:id="@+id/imageBtClear"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:background="#E8E5C9"
                    android:onClick="serchButton"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toTopOf="@+id/mapSend"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/iBtSpa"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/clear2" />

                <ImageButton
                    android:id="@+id/iBtRdSta"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="-10dp"
                    android:layout_marginEnd="20dp"
                    android:onClick="serchButton"

                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/iBtSpot"
                    app:layout_constraintStart_toEndOf="@+id/iBtHotel"
                    app:srcCompat="@drawable/roadsta" />

                <ImageButton
                    android:id="@+id/iBtSpot"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="-10dp"
                    android:onClick="serchButton"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/iBtSpa"
                    app:srcCompat="@drawable/spot" />

                <Button
                    android:id="@+id/mapSend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:onClick="mapSend"
                    android:text="地図検索"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="UsingOnClickInXml" />


                <TextView
                    android:id="@+id/serchTx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/whereGoing"
                    android:textColor="#A304376E"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.25"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="HardcodedText" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>